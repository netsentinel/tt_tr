{
	"ConnectionStrings": {
		"DefaultConnection": "server=db:5432;database=messenger;password=qwerty;username=postgres"
	},
	"Serilog": {
		"MinimumLevel": {
			"Default": "Warning",
			"Override": {
				"Api": "Information"
			}
		},
		"WriteTo": [
			{
				"Name": "Console",
				"Args": {
					"outputTemplate": "{Timestamp:HH:mm:ss} {Level:u3} {SourceContext,-35} {RequestId}{NewLine}{Message:lj}{NewLine}{NewLine}"
				}
			}
		]
	},
	"AllowedHosts": "*",
	"Kestrel": {
		"EndPoints": {
			"Http": {
				"Url": "http://+:5000"
			}
		}
	}
}
